@model CenterWebMake.Models.Labintroduce
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <link href="~/Content/css/index.css" rel="stylesheet" />
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
</head>
<body>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">实验室简介编辑</h4>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("LabintroduceTM1", "BackStage", FormMethod.Post, new { @class = "jjj" }))
        {
            @Html.AntiForgeryToken()
            <table>
                <tr style="height:50px;display:none">
                    <td class="MD-td">@Html.DisplayNameFor(model => model.ID)</td>
                    <td class="MD-td1">@Html.EditorFor(model => model.ID, new { @class = "form-control" }) </td>
                </tr>
                <tr style="height:50px;">
                    <td class="MD-td">@Html.DisplayNameFor(model => model.PublishDate)</td>
                    <td class="MD-td1">@Html.EditorFor(model => model.PublishDate, new { @class = "form-control" }) </td>
                </tr>
                <tr style="height:50px;">
                    <td class="MD-td">@Html.DisplayNameFor(model => model.CreateUser)</td>
                    <td class="MD-td1">@Html.EditorFor(model => model.CreateUser, new { @class = "form-control" }) </td>
                </tr>
                <tr style="height:50px;">
                    <td class="MD-td">@Html.DisplayNameFor(model => model.CreateDate)</td>
                    <td class="MD-td1">@Html.EditorFor(model => model.CreateDate, new { @class = "form-control" }) </td>
                </tr>
                <tr style="height:50px;">
                    <td class="MD-td">@Html.DisplayNameFor(model => model.UpdateDate)</td>
                    <td class="MD-td1">@Html.EditorFor(model => model.UpdateDate, new { @class = "form-control" }) </td>
                </tr>
                <tr style="height:50px;">
                    <td class="MD-td">@Html.LabelFor(model => model.ContentText)</td>
                    <td class="MD-td1">@Html.EditorFor(model => model.ContentText, new { @class = "form-control" }) </td>
                </tr>

            </table>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="submit" class="btn btn-primary">确定修改</button>
            </div>
        }
    </div>
</body>
</html>
